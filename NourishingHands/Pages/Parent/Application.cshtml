@page
@model NourishingHands.Pages.Parent.ApplicationModel
@{
    Layout = "_NhLayout";
}

<style>
    .signTxt {

        width: 250px;
        display: inline-block;
    }
</style>
<!-- START SECTION SHOP -->
<div class="section">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="heading_s1">
                    <h4>Personal Information</h4>
                </div>
                <form method="post" class="row needs-validation" novalidate>
                    @*<div asp-validation-summary="All" style="color:red"></div>*@
                    <br />
                    @if (Model.Person != null)
                    {
                        <input asp-for="Person.Id" hidden class="form-control">
                    }
                    <div class="form-group col-md-6 row">
                        <label asp-for="Person.FirstName" class="col-form-label col-sm-4"></label>
                        <div class="col-sm-8">
