@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript" src="~/assets/js/jquery.inputmask.js" charset="utf-8"></script>
    <script>
        console.log(navigator.userAgent);
        $("#homePhone").inputmask("1(999) 999-9999", {
            inputFormat: "1(999) 999-9999",
            outputFormat: "1(999) 999-9999",
            inputEventOnly: true
        });
        $("#workPhone").inputmask("1(999) 999-9999", {
            inputFormat: "1(999) 999-9999",
            outputFormat: "1(999) 999-9999",
            inputEventOnly: true
        });
        $("#ssNumber").inputmask("999-99-9999", {
            inputFormat: "999-99-9999",
            outputFormat: "999-99-9999",
            inputEventOnly: true
        });
        $("#zipCode").inputmask("99999", {
            inputFormat: "99999",
            outputFormat: "99999",
            inputEventOnly: true
        });
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    
    </script>
}