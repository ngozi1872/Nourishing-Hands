@page
@model NourishingHands.Pages.Mentor.MentorSchedule.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_NhLayout.cshtml";
}

<div class="section">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="heading_s1">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <br />
                    <h4>Mentor Schedule</h4>
                    <br />
                    <h5>@Model.FullName</h5>
                </div>
                <hr />
                <form method="post" class="row needs-validation" novalidate>
                    <br />
                    <input asp-for="@Model.Person.Id" hidden class="form-control">
                    <div class="form-group col-md-6 row">
                        <label class="col-form-label col-sm-4">Participants</label>
                        <div class="col-sm-8">
                            <select asp-for="MentorSchedule.MenteeId" class="form-control" required asp-items="ViewBag.MenteeData" name="menteeDdl" id="menteeDdl">
                                <option value=""> Please select paticipant</option>
                                <option value="-1"> -- Group event -- </option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-md-6 row">
                        <label asp-for="MentorSchedule.Title" class="col-form-label col-sm-4"></label>
                        <div class="col-sm-8">
                            <input asp-for="MentorSchedule.Title" required class="form-control">
                        </div>
                    </div>
                    <div class="form-group col-md-6 row">
                        <label class="col-form-label col-sm-4">Start Date & Time</label>
                        <div class="col-sm-8">
                            <input asp-for="MentorSchedule.StartDate" required class="form-control">
                        </div>
                    </div>
                    <div class="form-group col-md-6 row">
                        <label class="col-form-label col-sm-4">End Date & Time</label>
                        <div class="col-sm-8">
                            <input asp-for="MentorSchedule.EndDate" required class="form-control birthday">
                        </div>
                    </div>

                    <div class="form-group col-md-6 row">
                        <label class="col-form-label col-sm-4">Notes</label>
                        <div class="col-sm-8">
                            <textarea asp-for="MentorSchedule.Notes" required class="form-control" rows="4"></textarea>
                        </div>
                    </div>
                    <br /> <br />
                    <div class="form-group col-md-11 row">

                        <div class="col-sm-2">
                            <button type="submit" class="btn btn-default"> Submit </button>
                        </div>
                        <div class="col-sm-3">
                            <a asp-page="/Mentor/Home" class="btn btn-default">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="medium_divider"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="medium_divider"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="medium_divider"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="medium_divider"></div>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
            (function () {
                'use strict';
                window.addEventListener('load', function () {
                    // Fetch all the forms we want to apply custom Bootstrap validation styles to
                    var forms = document.getElementsByClassName('needs-validation');
                    // Loop over them and prevent submission
                    var validation = Array.prototype.filter.call(forms, function (form) {
                        form.addEventListener('submit', function (event) {
                            if (form.checkValidity() === false) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                    });
                }, false);
            })();

    </script>
}
